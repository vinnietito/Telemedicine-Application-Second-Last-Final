                            <option value="Surgery">Surgery</option>
                            <option value="Speech Therapy">Speech Therapy</option>
                            <option value="Urogynecology">Urogynecology</option>
                            <option value="Urology">Urology</option>
                            <option value="Vascular Surgery">Vascular Surgery</option>
                            <option value="Virology">Virology</option>
                        </select>

                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control password" onkeyup="pass()" name="password"
                            id="password" placeholder="Password">
                        <small class="passworderror"></small>
                        <label for="password">Password</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control passwordconfirm" name="passwordconfirm"
                            id="passwordconfirm" placeholder="Confirm Password">
                        <label for="passwordconfirm">Confirm Password</label>
                    </div>
                    <p style="text-align: center;">If you already have an account login <a href="/login">here</a></p>
                    <input type="submit" class="btn btn-primary register" value="Register">
