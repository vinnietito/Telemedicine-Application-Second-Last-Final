            <div class="card-body">
                {{#if error}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    {{error}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/if}}

                {{#if message}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{message}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/if}}
                {{#each rows}}
                <form action="/editpatient/{{this.patient_id}}" method="POST">

                    <h4 style="text-align: center;">Edit Patient Data</h4>

                    <div class="form-floating mb-3 mt-3">
                        <input type="text" class="form-control" name="firstname" id="firstname"
                            value="{{this.firstname}}" placeholder="Surname">
                        <label for="firstname">Surname</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control first" name="lastname" value="{{this.lastname}}"
                            id="lastname" placeholder="First Given Name">
                        <label for="lastname">First Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control email" name="email" value="{{this.email}}" id="email"
                            onkeyup="emailval()" placeholder="Email Address">
                        <small class="emailerror"></small>
                        <label for="email">Email Address</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="tel" class="form-control phone" name="phone" value="{{this.phone}}" id="phone"
                            placeholder="Phone Number">
                        <label for="phone">Phone Number</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="address" value="{{this.address}}" id="address"
                            placeholder="Home Address">
                        <label for="address">Home Address</label>
                    </div>

                    <div class="form-floating mb-3">
                        <label for="gender"></label>
                        <select name="gender" id="gender" class="form-select">
                            <option value="N/A">Select</option>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                        </select>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input type="date" class="form-control" name="date_of_birth" value="{{this.date_of_birth}}"
                            id="date_Of_birth" placeholder="Date_Of_Birth">
                        <label for="date_Of_birth">Date_Of_Birth</label>
                    </div>

                     


                    <input type="submit" class="btn btn-primary register" value="SUBMIT">

                </form>
                {{/each}}


            </div>
        </div>
